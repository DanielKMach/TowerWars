{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
			"identifier": "towerwar:bobomb",
			"runtime_identifier": "minecraft:creeper",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false
        },

        "component_groups": {
               
			"towerwar:game_trader": {
				"minecraft:trade_table": {
					"display_name": "entity.towerwar:bobomb.name",
					"new_screen": true,
					"table": "trading/bobomb_game_trades.json"
				},
				"minecraft:health": {
					"value": 1024,
					"max": 1024
				},
				"minecraft:variant": {
					"value": 1
				}
			},

			"towerwar:kit_trader": {
				"minecraft:trade_table": {
					"display_name": "entity.towerwar:bobomb.name",
					"new_screen": true,
					"table": "trading/bobomb_kit_trades.json"
				},
				"minecraft:health": {
					"value": 1024,
					"max": 1024
				},
				"minecraft:variant": {
					"value": 2
				}
			},

			"towerwar:wanderer": {
				"minecraft:trade_table": {
					"display_name": "entity.towerwar:bobomb.name",
					"new_screen": true,
					"table": "trading/bobomb_trades.json"
				},
				"minecraft:health": {
					"value": 16,
					"max": 16
				},
				"minecraft:variant": {
					"value": 0
				},
				"minecraft:damage_sensor": {
					"triggers": {
						"on_damage": {
							"filters": {
								"test": "has_damage",
								"value": "fatal"
							},
							"event": "towerwar:explode"
						},
						//"damage_modifier": -999,
						"deals_damage": false
					}
					
				},
				"minecraft:interact": {
					"interactions": {
					  	"on_interact": {
							"filters": {
							  	"all_of": [
									{ "test": "is_family", "subject": "other", "value": "player" },
									{ "test": "has_equipment", "domain": "hand", "subject": "other", "value": "flint_and_steel" },
									{ "test": "has_component", "operator": "!=", "value": "minecraft:explode" }
							  	]
							},
					  		"event": "towerwar:explode",
					  		"target": "self"
					  	},
					  	"hurt_item": 1,
					  	"swing": true,
					  	"play_sounds": "ignite",
					  	"interact_text": "action.interact.creeper"
					}
				},
				"minecraft:navigation.walk": {
					"can_path_over_water": true,
					"avoid_water": true,
					"avoid_damage_blocks": true
				},
				"minecraft:movement": {
				  "value": 0.25
				},
				"minecraft:movement.basic": {},
				"minecraft:jump.static": {},
				"minecraft:can_climb": {},
				"minecraft:pushable": {},
				"minecraft:nameable": {}
			},

			"towerwar:exploding": {
				"minecraft:explode": {
					"fuse_length": 1.5,
					"fuse_lit": true,
					"power": 6,
					"causes_fire": false,
					"destroy_affected_by_griefing": true
				},
				"minecraft:damage_sensor": {
					"triggers": {
						"cause": "all",
						"deals_damage": false
					}
				},
				"minecraft:behavior.swell": {
					"start_distance": 0,
					"stop_distance": 100.0,
					"priority": 0
				},
				"minecraft:pushable": {}
			}
		},

		"components": {
			"minecraft:type_family": {
				"family": ["neutral"]
			},
			"minecraft:collision_box": {
				"width": 1.0,
				"height": 0.8
			},

			"minecraft:behavior.trade_with_player": {},
			"minecraft:behavior.look_at_player": {
				"priority": 2,
				"look_distance": 3.0,
				"probability": 1.00
			},
			"minecraft:behavior.random_look_around": {
				"priority": 5
			},
			"minecraft:physics": {}
		},
		
		"events": {
			"towerwar:become_game_trader": {
				"remove": {
					"component_groups": [
						"towerwar:wanderer",
						"towerwar:kit_trader"
					]
				},
				"add": {
					"component_groups": [
						"towerwar:game_trader"
					]
				}
			},
			"towerwar:become_kit_trader": {
				"remove": {
					"component_groups": [
						"towerwar:wanderer",
						"towerwar:game_trader"
					]
				},
				"add": {
					"component_groups": [
						"towerwar:kit_trader"
					]
				}
			},

			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"towerwar:wanderer"
					]
				}
			},


			"towerwar:explode": {
				"remove": {
					"component_groups": [
						"towerwar:wanderer"
					]
				},
				"add": {
					"component_groups": [
						"towerwar:exploding"
					]
				},
				"run_command": {
					"command": "playsound random.fuse @a ~ ~ ~ 1 0.5"
				}
			}
		}
	}
}