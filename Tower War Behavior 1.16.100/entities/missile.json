{
    "format_version": "1.14.0",
    "minecraft:entity": {
        "description": {
            "identifier": "towerwar:missile",
            "runtime_identifier": "minecraft:arrow",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false
        },
 
        "component_groups": {
            "towerwar:exploding": {
                "minecraft:explode": {
                    "fuse_length": 0,
                    "fuse_lit": true,
                    "power": 4,
                    "causes_fire": false,
                    "destroy_affected_by_griefing": true
                }
            }
        },
 
        "components": {
            "minecraft:collision_box": {
                "width": 0.6,
                "height": 0.6
            },
            "minecraft:projectile": {
     
                "on_hit": {
                    "definition_event": {
                        "affect_projectile": true,
                        "eventTrigger": {
                            "event": "towerwar:on_collision",
                            "target": "self"
                        }
                    },
                    "arrow_effect": {}
                },
                "power": 0.3,
                "inertia": 1,
                "gravity": 0,
                "catch_fire": false
            },
            "minecraft:physics": {
            }
        },
        "events": {
            "towerwar:on_collision": {
                "run_command": {
                    "command": [
                        "execute @s[scores={PType=1}] ~ ~ ~ summon towerwar:collecting_area p1",
                        "execute @s[scores={PType=2}] ~ ~ ~ summon towerwar:collecting_area p2",
                        "execute @s[scores={PType=3}] ~ ~ ~ summon towerwar:collecting_area p3",
                        "execute @s[scores={PType=4}] ~ ~ ~ summon towerwar:collecting_area p4"
                    ]
                },
                "add": {
                    "component_groups": [
                        "towerwar:exploding"
                    ]
                }
            },
            "minecraft:entity_spawned": {
                "run_command": {
                    "command": [
                        "playsound random.bow @a ~ ~ ~ 1 0.45", // TODO: Missile sound
                        "scoreboard players operation @s PType = @p PType"
                    ]
                }
            }
        }
    }
}
 